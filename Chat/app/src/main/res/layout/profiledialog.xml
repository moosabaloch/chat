<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/profiledialog_imageview"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:src="@drawable/friend" />

    <TextView
        android:id="@+id/profiledialog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profiledialog_phone"
        android:background="@drawable/roundcorner"
        android:paddingLeft="2dp"
        android:paddingRight="6dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/profiledialog_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_above="@+id/deleteForProfileDialog"
        android:background="@drawable/roundcorner"
        android:paddingLeft="2dp"
        android:paddingRight="6dp"

        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/profiledialog_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profiledialog_email"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/roundcorner"
        android:paddingLeft="2dp"
        android:paddingRight="6dp"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/conversationForProfileDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:text="@string/conversation" />

    <Button
        android:id="@+id/deleteForProfileDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="@string/delete" />
</RelativeLayout>